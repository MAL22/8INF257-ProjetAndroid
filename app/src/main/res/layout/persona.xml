<?xml version="1.0" encoding="utf-8"?>
<!-- Use DrawerLayout as root container for activity -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:fitsSystemWindows="true">

    <!-- Layout to contain contents of main body of screen (drawer will slide over this) -->


    <!-- Container for contents of drawer - use NavigationView to make configuration easier -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/nomPersona"
            style="@style/P5.TextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="4dp"
            android:text="Nom Persona"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nomShadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="Nom Shadow"
            app:layout_constraintEnd_toEndOf="@+id/nomPersona"
            app:layout_constraintStart_toStartOf="@+id/nomPersona"
            app:layout_constraintTop_toBottomOf="@+id/nomPersona" />

        <ImageView
            android:id="@+id/imagePersona"
            android:layout_width="188dp"
            android:layout_height="158dp"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/nomPersona"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/persona_5_logo" />

        <TextView
            android:id="@+id/descriptionPersona"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_marginTop="4dp"
            android:text="Description du Persona va ICI. YADADADADADADADADDADADADADADADADADAASDASDADSWWQAS"
            app:layout_constraintEnd_toEndOf="@+id/nomPersona"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/nomPersona"
            app:layout_constraintTop_toBottomOf="@+id/nomShadow" />

        <TextView
            android:id="@+id/informationsPersonaTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/informationsPersonaTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout4" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="@+id/imagePersona"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imagePersona"
            app:layout_constraintTop_toBottomOf="@+id/imagePersona">

            <TextView
                android:id="@+id/statsPersonaTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:paddingEnd="2dp"
                android:paddingStart="2dp"
                android:text="@string/statsPersonaTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/statsPersonaStrengthTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="@string/statsPersonaStrengthTitle"
                app:layout_constraintEnd_toEndOf="@+id/statsPersonaTitle"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/statsPersonaTitle"
                app:layout_constraintTop_toBottomOf="@+id/statsPersonaTitle" />

            <TextView
                android:id="@+id/statsPersonaMagicTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:paddingEnd="2dp"
                android:paddingStart="2dp"
                android:text="@string/statsPersonaMagicTitle"
                app:layout_constraintEnd_toEndOf="@+id/statsPersonaStrengthTitle"
                app:layout_constraintStart_toStartOf="@+id/statsPersonaStrengthTitle"
                app:layout_constraintTop_toBottomOf="@+id/statsPersonaStrengthTitle" />

            <TextView
                android:id="@+id/statsPersonaEnduranceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:paddingEnd="2dp"
                android:paddingStart="2dp"
                android:text="@string/statsPersonaEnduranceTitle"
                app:layout_constraintEnd_toEndOf="@+id/statsPersonaMagicTitle"
                app:layout_constraintStart_toStartOf="@+id/statsPersonaMagicTitle"
                app:layout_constraintTop_toBottomOf="@+id/statsPersonaMagicTitle" />

            <TextView
                android:id="@+id/statsPersonaAgilityTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="@string/statsPersonaAgilityTitle"
                app:layout_constraintEnd_toEndOf="@+id/statsPersonaEnduranceTitle"
                app:layout_constraintStart_toStartOf="@+id/statsPersonaEnduranceTitle"
                app:layout_constraintTop_toBottomOf="@+id/statsPersonaEnduranceTitle" />

            <TextView
                android:id="@+id/statsPersonaLuckTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:paddingEnd="2dp"
                android:paddingStart="2dp"
                android:text="@string/statsPersonaLuckTitle"
                app:layout_constraintEnd_toEndOf="@+id/statsPersonaAgilityTitle"
                app:layout_constraintStart_toStartOf="@+id/statsPersonaAgilityTitle"
                app:layout_constraintTop_toBottomOf="@+id/statsPersonaAgilityTitle" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/informationsPersonaTitle">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true" />

</android.support.v4.widget.DrawerLayout>